@model IEnumerable<mvc.Models.data.brokers>

@{
    ViewBag.Title = "ListBrokers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center">
    <img src="~/images/list.png" class="img-fluid" style=" width:100%; height:100%" />
</div>
<div class="table-responsive ">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.lastname)
            <th>
                @Html.DisplayNameFor(model => model.firstname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.phoneNumber)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.lastname
                </td>
                <td>
                    @item.firstname
                </td>
                <td>
                    @item.mail
                </td>
                <td>
                    @item.phoneNumber
                </td>
                <td>
                    @Html.ActionLink("Profil", "profilbroker", new { id = item.idBroker }, new { @class = "btn btn-link" })
                    @Html.ActionLink("Modifer", "Edit", new { id = item.idBroker }, new { @class = "btn btn-info" })
                    @Html.ActionLink("Prendre un RDV", "BrokerAppointment", new { idBroker = item.idBroker }, new { @class = "btn btn-secondary" })
                </td>
            </tr>
        }

    </table>

</div>
