@model mvc.Models.data.appointments

@{
    ViewBag.Title = "AddAppointment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Prise de rendez-vous</h2>
@if (ViewBag.Message != null)
{

    <!-- Success Alert -->
    <div class="alert alert-info alert-dismissible fade show" role="alert">
        Votre rendez-vous a bien été enregistré.
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">


            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">

                <div class="col-md-10">
                    @Html.EditorFor(model => model.dateHour, new { htmlAttributes = new { @id = "datetime" } })
                    @Html.ValidationMessageFor(model => model.dateHour, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.subject, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.subject, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.subject, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-10">Courtier</label>

                <div class="col-md-10">
                    @Html.DropDownList("idBroker", null, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.idBroker, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-10">Client</label>
                <div class="col-md-10">
                    @Html.DropDownList("idCustomer", null, htmlAttributes: new { @class = "form-select" })
                    @Html.ValidationMessageFor(model => model.idCustomer, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Enregistrer" class="btn btn-success" />
                </div>
            </div>
        </div>

    }


</form>

<script type="text/javascript">
    $(document).ready(function () {
        $('#datetime').datetimepicker($.datetimepicker.setLocale('fr'));
    });
</script>